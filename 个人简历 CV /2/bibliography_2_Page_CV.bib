		Pmid = {23202133},
		Title = {{Taking transgenic rice drought screening to the field}},
		Url = {http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=3254685\&tool=pmcentrez\&rendertype=abstract http://www.ncbi.nlm.nih.gov/pubmed/23202133},
