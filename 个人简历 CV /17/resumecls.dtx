% \begin{macro}{\entry}
%    \begin{macrocode}
\newcommand{\entry}[3]{%
    \begin{tabularx}{\textwidth}{@{\hspace{#1}}#2}
        #3
    \end{tabularx}
}
%    \end{macrocode}
% \end{macro}
