%% Draw the cover page
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

  % PHD PROGRAM
\newcommand{\novaimscoverphd}{%
  \coveritem[l]{0cm}{%
    \coverbackground
  }
  % INFORMATION MANAGEMENT
  \coveritem[l]{0cm}{%
    \fontfamily{phv}\fontsize{16}{16}\selectfont
    \textcolor{imsdarkgrey}{\textbf{\themajorfield[\novathesis@opt@coverlang]}}
  }
  % SPECIALIZATION IN
  \coveritem[l]{0,7cm}{%
    \fontfamily{phv}\fontsize{16}{16}\selectfont
    \textcolor{imsmidgrey}{\textbf{Specialization in \thesubtitle}}
  }
  % DISSERTATION TITLE
  \coveritem[l]{1.8cm}{%
    \fontfamily{phv}\fontsize{16}{16}\selectfont
    \textcolor{imsdarkgrey}{\textbf{\thetitle}}
  }
  % AUTHOR NAME
  \coveritem[l]{0.4cm}{%
    \fontfamily{phv}\fontsize{14}{14}\selectfont
    \textcolor{imsdarkgrey}{\textbf{\theauthorname}}
  }
  % DISSERTATION TEXT
  \coveritem[l]{5}{%
    \fontfamily{phv}\fontsize{14}{14}\selectfont
    \textcolor{imsdarkgrey}%
          {\thedissertationstr[\novathesis@opt@docdegree,\novathesis@opt@coverlang]}
  }
  % DATE
  \coveritem[l]{1cm}{%
    \fontfamily{phv}\fontsize{11}{11}\selectfont%
    \textcolor{imsdarkgrey}{\textbf{%
      \ifdraftdoc%
        DRAFT: \today%
      \else%
        \thedatemonth, \thedateyear%
      \fi%
    }}%
  }
  % SCHOOL
  \coveritem[l]{1cm}{%
    \fontfamily{phv}\fontsize{11}{11}\selectfont
    \textcolor{imsdarkgrey}%
          {\textbf{\thefaculty[en]}}
  }
  % UNIVERSITY
  \coveritem[l]{0.0cm}{%
    \fontfamily{phv}\fontsize{11}{11}\selectfont
    \textcolor{imsdarkgrey}%
          {\theuniversity[\novathesis@opt@coverlang]}
  }
}

  % MSc PROGRAM
\newcommand{\novaimscovermsc}{%
  % % Title of Dissertation
  \coveritem[l]{0cm}{%
    \coverbackground
  }

  % % Title of Dissertation
  \coveritem[l]{1}{%
    \fontfamily{phv}\fontsize{17}{17}\selectfont
    \textcolor{imsdarkgrey}{\textbf{\thetitle}}\\[0.25ex]
    \fontfamily{phv}\fontsize{16}{16}\selectfont
    \textcolor{imslightgrey}{\thesubtitle}
  }

  % Author name
  \coveritem[l]{1}{%
    \fontfamily{phv}\fontsize{15}{15}\selectfont
    \textcolor{imsdarkgrey}{\textbf{\theauthorname}}
  }

  % Degree
  \coveritem[l]{1}{%
    \fontfamily{phv}\fontsize{14}{14}\selectfont
    \textcolor{imsdarkgrey}{\thepresentationtext}
  }

  % Date
  \coveritem[c]{1}{%
    ~
    % \fontfamily{phv}\fontsize{11}{11}\selectfont
    % \ifdraftdoc
    %   \textbf{DRAFT: \today}
    % \else
    %   \textbf{\thedatemonth, \thedateyear}
    % \fi
  }
}


