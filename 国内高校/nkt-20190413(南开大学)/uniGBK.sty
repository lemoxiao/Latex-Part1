      \fi
      \cp@cnte=\cp@cntd
      \ifnum\cp@cntd<0\relax
        \cp@cntd=0\relax
      \fi
    \else
      \cp@cntb=0\relax
      \cp@cntc=0\relax
      \cp@cntd=0\relax
      \cp@cnte=0\relax
    \fi
